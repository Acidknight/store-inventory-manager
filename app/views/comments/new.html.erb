<h1>Leave a comment for <%= @inventory_list.name %> list</h1>

<%= form_for(@comment) do |f| %>
    <%= f.hidden_field :inventory_list_id, :value => @inventory_list.id %>
    
    <%= f.label :content, "Comment" %>
    <%= f.text_field :content, placeholder: "Tell us what you think." %>
    <br>
    <br>
    <%= f.submit "Submit" %>

<% end %>